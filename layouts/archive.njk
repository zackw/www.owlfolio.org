{% extends "base.html" %}
{% from "macros.html" import pager, article_header %}
{% block title %}
{% if articles_page and articles_page.has_previous() %}
Archives, page {{ articles_page.number }} | {% endif %}{{ sitename -}}
{% endblock %}
{% block content %}
{% block content_title %}
{% endblock %}
{% for article in articles_page.object_list %}
<article class="hentry">
  {{ article_header(article, 2) }}
  <div class="entry-content">
    {{ article.summary }}
    {% if article.has_summary %}
    <p><a href="/{{ article.url }}">Continuedâ€¦</a></p>
    {% endif %}
  </div>
</article>
{% endfor %}
{{ pager(articles_previous_page, 'Newer posts',
         articles_next_page,     'Older posts') }}
{% endblock content %}
