{% extends "base.njk" %}
{% block title %}
{%- if pagination.previous -%}
Archives, page {{ pagination.num }} | {% endif %}{{ sitename }}
{%- endblock %}
{% from "macros.njk" import pager, article_header %}
{% block content %}
  {% block content_title %}
  {% endblock %}
  {% for article in pagination.files %}
    <article class="hentry">
      {{- article_header(2, article.path, article.title,
        article.creation_date,
        article.last_modification_date) }}
      <div class="entry-content">
        {{ article.excerpt | safe }}
        {%- if article.continued %}
          <p><a href="{{ article.path | canon_path }}">Continuedâ€¦</a></p>
        {%- endif %}
      </div>
    </article>
  {% endfor %}
  {{ pager(pagination.previous, pagination.next,
           'Newer posts', 'Older posts') }}
{% endblock content %}
