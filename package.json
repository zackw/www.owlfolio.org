{
  "name": "www.owlfolio.org",
  "version": "3.0.0",
  "type": "module",
  "description": "Website www.owlfolio.org",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackw/www.owlfolio.org.git"
  },
  "author": "Zack Weinberg",
  "license": "CC-BY-NC-4.0",
  "homepage": "https://www.owlfolio.org/",
  "scripts": {
    "start": "cross-env NODE_ENV=development NODE_PATH=./node_modules npm run watch & npm run serve",
    "build": "cross-env NODE_ENV=production node index",
    "watch": "nodemon",
    "serve": "browser-sync start --server 'build' --files 'build/**' --directory",
    "lint": "eslint --fix ."
  },
  "nodemonConfig": {
    "watch": [
      "index.js",
      "layouts",
      "lib",
      "src"
    ],
    "ext": "css js json html njk md scss yaml"
  },
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "metalsmith-debug-ui": "^0.3.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "@metalsmith/default-values": "^3.2.1",
    "@metalsmith/layouts": "^2.6.0",
    "@metalsmith/metadata": "^0.2.0",
    "@metalsmith/permalinks": "^2.4.1",
    "highlight.js": "^11.6.0",
    "jstransformer-nunjucks": "^1.1.0",
    "markdown-it-anchor": "^8.6.5",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "metalsmith": "^2.5.1",
    "metalsmith-beautify": "^0.2.0",
    "metalsmith-if": "^0.1.1",
    "metalsmith-markdownit": "^0.5.0",
    "multimatch": "^6.0.0"
  }
}
