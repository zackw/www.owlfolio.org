{
  "name": "www.owlfolio.org",
  "version": "3.0.0",
  "type": "module",
  "description": "Website www.owlfolio.org",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackw/www.owlfolio.org.git"
  },
  "author": "Zack Weinberg",
  "license": "CC-BY-NC-4.0",
  "homepage": "https://www.owlfolio.org/",
  "scripts": {
    "start": "NODE_ENV=development NODE_PATH=./node_modules npm run watch & npm run serve",
    "build": "NODE_ENV=production node index",
    "watch": "nodemon --config .nodemon.json",
    "serve": "browser-sync start --server 'build' --files 'build/**' --index index.html",
    "lint": "eslint --cache --fix index.js lib",
    "prepare": "husky install",
    "format": "prettier --loglevel warn --write '**/*.{js,json,yml,yaml}'",
    "posttest": "npm run format"
  },
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "metalsmith-beautify": "^0.2.0",
    "metalsmith-broken-link-checker": "^1.0.2",
    "metalsmith-debug-ui": "^0.3.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "@metalsmith/collections": "^1.3.0",
    "@metalsmith/layouts": "^2.6.0",
    "@metalsmith/metadata": "^0.2.0",
    "@metalsmith/permalinks": "^2.4.1",
    "highlight.js": "^11.6.0",
    "jstransformer-nunjucks": "^1.1.0",
    "luxon": "^3.1.0",
    "markdown-it-anchor": "^8.6.5",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "metalsmith": "^2.5.1",
    "metalsmith-markdownit": "github:zackw/metalsmith-markdownit#semver:0.6.0",
    "metalsmith-pagination": "^1.5.0",
    "multimatch": "^6.0.0",
    "simple-git": "^3.15.0"
  }
}
